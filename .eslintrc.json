{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "semi": [2, "always"],
      "space-before-function-paren": ["error", "never"],
      "no-constant-condition": ["off"],
      "no-fallthrough": ["off"]
    }
}
